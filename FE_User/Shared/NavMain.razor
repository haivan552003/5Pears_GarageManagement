@inject IJSRuntime js
@inject NavigationManager NavigationManager

<MudContainer Class="fixed z-60 pt-5">
    <MudAppBar Elevation="1" Class="pt-2 pb-2">
        <MudLink Typo="Typo.h4" Href="/" Underline="Underline.None">
