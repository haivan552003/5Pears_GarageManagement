                                Tra cứu thông tin đặt vé
                            </MudText>
                            <MudText Class="mt-1" Typo="Typo.subtitle2">
                                <MudIcon Icon="@Icons.Material.Outlined.ArrowRight" Color="Color.Default"></MudIcon>
                                Điều khoản sử dụng
                            </MudText>
                            <MudText Class="mt-1" Typo="Typo.subtitle2">
                                <MudIcon Icon="@Icons.Material.Outlined.ArrowRight" Color="Color.Default"></MudIcon>
                                Câu hỏi thường gặp
                            </MudText>
                            <MudText Class="mt-1" Typo="Typo.subtitle2">
                                <MudIcon Icon="@Icons.Material.Outlined.ArrowRight" Color="Color.Default"></MudIcon>
                                Hướng dẫn đặt vé
                            </MudText>
                        </MudItem>
                        <MudItem xs="4">
                            <MudText Class="mt-1 fw-bold" Typo="Typo.subtitle2">Hướng dẫn</MudText>
                            <MudText Class="mt-1" Typo="Typo.subtitle2">
                                <MudIcon Icon="@Icons.Material.Outlined.ArrowRight" Color="Color.Default"></MudIcon>
                                Hướng dẫn thuê tài xế
                            </MudText>
                            <MudText Class="mt-1" Typo="Typo.subtitle2">
                                <MudIcon Icon="@Icons.Material.Outlined.ArrowRight" Color="Color.Default"></MudIcon>
                                Hướng dẫn thuê xe
                            </MudText>
                        </MudItem>
                        <MudItem xs="4">
                            <MudText Class="mt-1 fw-bold" Typo="Typo.subtitle2">Về chúng tôi</MudText>
                            <MudText Class="mt-1" Typo="Typo.subtitle2">
                                <MudIcon Icon="@Icons.Material.Outlined.ArrowRight" Color="Color.Default"></MudIcon>
                                Đóng góp ý kiến
                            </MudText>
                            <MudText Class="mt-1" Typo="Typo.subtitle2">
                                <MudIcon Icon="@Icons.Material.Outlined.ArrowRight" Color="Color.Default"></MudIcon>
                                Chăm sóc khách hàng
                            </MudText>
                            <MudText Class="mt-1" Typo="Typo.subtitle2">
                                <MudIcon Icon="@Icons.Material.Outlined.ArrowRight" Color="Color.Default"></MudIcon>
                                Tin tức, sự kiện
                            </MudText>
                        </MudItem>
                     </MudGrid>

                    <MudText Class="fw-bold mt-5" Typo="Typo.subtitle2">Phương thức thanh toán</MudText>
                     <MudGrid>
                        <MudItem Class="xs=1">
                            <MudImage Src="https://th.bing.com/th/id/OIP.pn3RUm1xk1HiAxWIgC6CIwAAAA?rs=1&pid=ImgDetMain" Width="45" Height="45" Elevation="25" Class="rounded-lg" />
                        </MudItem>
                        <MudItem Class="xs=1">
                            <MudImage Src="https://th.bing.com/th/id/OIP.wBKSzdf1HTUgx1Ax_EecKwHaHa?rs=1&pid=ImgDetMain" Width="45" Height="45" Elevation="25" Class="rounded-lg" />
