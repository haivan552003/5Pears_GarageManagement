<MudDialog>
    <DialogContent>
        <MudDivider Class="mb-4" Style="height: 0.09375rem; background-color: #333;" />
        <MudText Style="font-size: 16px" Align="Align.Justify" Typo="Typo.h6" Class="mb-3">
            <b style="font-weight: 800;">Bạn đã có CCCD gắn chip</b> <br />
            Giấy tờ thuê xe bao gồm: <br />
            <b style="font-weight: 800;">- Giấy phép lái xe </b> (chủ xe đối chiếu bản gốc với thông tin GPLX đã xác thực trên app Mioto & gửi lại bạn); <br />
            <b style="font-weight: 800;">- CCCD gắn chip </b> (chủ xe đối chiếu bản gốc với thông tin cá nhân trên VNeID & gửi lại bạn)
        </MudText>

        <MudText Style="font-size: 16px" Align="Align.Justify" Typo="Typo.h6" Class="mb-3">
            <b style="font-weight: 800;">Bạn chưa có CCCD gắn chip</b> <br />
            Giấy tờ thuê xe bao gồm: <br />
            <b style="font-weight: 800;">- Giấy phép lái xe </b> (chủ xe đối chiếu bản gốc với thông tin GPLX đã xác thực trên app Mioto & gửi lại bạn); <br />
            <b style="font-weight: 800;">- Passport </b> (chủ xe kiểm tra bản gốc, giữ lại và hoàn trả khi bạn trả xe)
        </MudText>

        <MudText Style="font-size: 16px" Align="Align.Justify" Typo="Typo.h6" Class="mb-3">
            <b style="font-weight: 800;">Lưu ý: </b> Khách thuê vui lòng chuẩn bị đầy đủ BẢN GỐC tất cả giấy tờ thuê xe khi làm thủ tục nhận xe.
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() => MudDialog.Cancel();
}