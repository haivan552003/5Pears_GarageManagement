            <div class="pb-5">
                @if (latestImages != null && latestImages.Any())
                {
                    @foreach (var image in latestImages)
                    {
                        <img src="@image.name" class="rounded-3 pb-3 w-100" Alt="Hình chiếc xe 2" />
                    }
                }
