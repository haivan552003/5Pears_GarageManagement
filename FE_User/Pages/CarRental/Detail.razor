                        <MudText Typo="Typo.subtitle1" Class=" fw-bold">RON 95-III</MudText>
                    }
                    else if (cars.fuel == 3)
                    {
                        <MudText Typo="Typo.subtitle1" Class=" fw-bold">RON 95-IV</MudText>
                    }
                    else if (cars.fuel == 4)
                    {
                        <MudText Typo="Typo.subtitle1" Class=" fw-bold">Diesel 0,05%5</MudText>
                    }
                    else if (cars.fuel == 5)
