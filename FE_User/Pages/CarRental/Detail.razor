<MudContainer Class="pt-5">
    <MudGrid>
        <MudItem xs="8">
            <div class="pb-5">
                @if (cars.car_img != null && cars.car_img.Any())
                {
                    <img src="@cars.car_img.First().name" Alt="Hình chiếc xe" class="img-fluid w-100 mx-auto rounded-3" Style="width:810px; height:600px;" />
