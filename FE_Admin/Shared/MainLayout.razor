@inherits LayoutComponentBase
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
<script src="https://unpkg.com/phosphor-icons"></script>
<link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
<link rel="stylesheet" href="~/style.css">
<link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
<link href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" rel="stylesheet">
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<script type="module" src="~/script.js"></script>
<PageTitle>FE_Admin</PageTitle>

<MudLayout>
    <NavMenu />
    <MudMainContent Class="pa-3 content-container">
        @Body
    </MudMainContent>
    <MudContainer style="margin-top:20px; padding: 0px;" MaxWidth="MaxWidth.ExtraExtraLarge">
        <MudPaper Class="pa-1 fixed_position" Style="@($"color:{Colors.Shades.White}; background:{Colors.DeepPurple.Accent4};")">
            <MudGrid>
                <MudItem xs="5">
                    <MudText Style="font-size: 12px;" Typo="Typo.body2">© Bản quyền thuộc về Boxcars</MudText>
                </MudItem>
                <MudItem xs="7">
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudContainer>
</MudLayout>


<script src="_content/MudBlazor/MudBlazor.min.js"></script>

<style>
    body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden; /* Ẩn cuộn toàn bộ trang */
    }

    .mud-layout {
        display: flex;
        flex-direction: column;
        height: 100vh;
    }

    .mud-main-content {
        flex: 1;
        overflow-y: auto; /* Cho phép cuộn nội dung */
        padding: 16px;
    }

    .fixed_position {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        border-radius: 0;
    }
</style>
<MudThemeProvider />


<MudSnackbarProvider />
<MudDialogProvider />