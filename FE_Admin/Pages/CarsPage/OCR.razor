                            <MudText>@guest.date</MudText>
                            <MudText Typo="Typo.subtitle1" Class="fw-bold mt-1">Tài xế:</MudText>
                            <MudText>@guest.driver_name</MudText>
                            <MudText Typo="Typo.subtitle1" Class="fw-bold mt-1">Khách hàng:</MudText>
