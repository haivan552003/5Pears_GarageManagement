                </MudPaper>
            </MudItem>
        }


        @if (guest_cars_custom != null && guest_cars_custom.Any())
        {
            <MudItem xs="12">
                <MudPaper Elevation="0">
                    <MudText Typo="Typo.h5" Class="fw-bold mt-2 mb-2" Color="Color.Primary">KHÁCH THUÊ XE</MudText>

                    <MudTable Items="@guest_cars_custom" Hover="true" Bordered="true" HorizontalScrollbar="true" Striped="true">
                        <HeaderContent>
                            <MudTh Class="fw-bold">Thời gian</MudTh>
                            <MudTh Class="fw-bold">Khách hàng</MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd>@context.date</MudTd>
                            <MudTd>@context.cus_name</MudTd>
                        </RowTemplate>
                        <PagerContent>
                            <MudTablePager />
                        </PagerContent>
                    </MudTable>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>

    <MudGrid Class="d-sm-none">
        @if (trip_detail_custom != null && trip_detail_custom.Any())
        {
            <MudItem xs="12">
                <MudText Typo="Typo.h6" Class="fw-bold mt-2 mb-2" Color="Color.Primary">LỊCH TRÌNH THUÊ XE</MudText>
                @foreach (var trip in trip_detail_custom)
                {
                    <MudCard Class="mb-2">
                        <MudCardContent>
                            <MudText Typo="Typo.subtitle1" Class="fw-bold">Thời gian:</MudText>
                            <MudText>@trip.date</MudText>
                            <MudText Typo="Typo.subtitle1" Class="fw-bold mt-1">Địa điểm:</MudText>
                            <MudText>@trip.location</MudText>
