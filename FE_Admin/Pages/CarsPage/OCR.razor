        @if (guest_cars_custom != null && guest_cars_custom.Any())
        {
            <MudItem xs="12" Class="d-sm-none">
                <MudText Typo="Typo.h6" Class="fw-bold mt-2 mb-2" Color="Color.Primary">KHÁCH THUÊ XE</MudText>
                @foreach (var guest in guest_cars_custom)
                {
                    <MudCard Class="mb-2">
                        <MudCardContent>
                            <MudText Typo="Typo.subtitle1" Class="fw-bold">Thời gian:</MudText>
                            <MudText>@guest.date</MudText>
                            <MudText Typo="Typo.subtitle1" Class="fw-bold mt-1">Khách hàng:</MudText>
